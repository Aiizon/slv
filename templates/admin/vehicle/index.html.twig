{% extends 'base.html.twig' %}

{% block title %}Véhicules{% endblock %}

{% block body %}
    <div class="d-flex flex-grow-1 flex-column m-4">
        <div class="d-flex flex-column flex-grow-1 justify-content-center p-4 text-black">
            <h1 class="align-self-center">Véhicules</h1>
            <h2 class="align-self-center fs-4">Les véhicules disponibles</h2>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Véhicule</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for vehicle in vehicles %}
                    <tr>
                        <td><a href="{{ path('admin_vehicle_show', {'id': vehicle.id}) }}">{{ vehicle.model.brand.name }} {{ vehicle.model.name }}</a></td>
                        <td>
                            <a href="{{ path('admin_vehicle_edit', {'id': vehicle.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('admin_vehicle_delete', {'id': vehicle.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_vehicle_new') }}" class="align-self-center col-2 btn btn-success">Ajouter un véhicule</a>
    </div>
{% endblock %}