{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}

{% block body %}
    <div class="d-flex flex-grow-1 flex-column m-4">
        <div class="d-flex flex-column flex-grow-1 justify-content-center p-4 text-black">
            <h1 class="align-self-center">Types</h1>
            <h2 class="align-self-center fs-4">Les types de v√©hicules disponibles</h2>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td><a href="{{ path('admin_type_show', {'id': type.id}) }}">{{ type.name }}</a></td>
                        <td>
                            <a href="{{ path('admin_type_edit', {'id': type.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('admin_type_delete', {'id': type.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_type_new') }}" class="align-self-center col-3 btn btn-success">Ajouter un type</a>
    </div>
{% endblock %}