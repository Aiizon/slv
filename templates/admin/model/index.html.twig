{% extends 'base.html.twig' %}

{% block title %}Modèles{% endblock %}

{% block body %}
    <div class="d-flex flex-grow-1 flex-column m-4">
        <div class="d-flex flex-column flex-grow-1 justify-content-center p-4 text-black">
            <h1 class="align-self-center">Modèles</h1>
            <h2 class="align-self-center fs-4">Les modèles de véhicules disponibles</h2>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Marque</th>
                    <th>Marque</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for model in models %}
                    <tr>
                        <td><a href="{{ path('admin_model_show', {'id': model.id}) }}">{{ model.name }}</a></td>
                        <td><a href="{{ path('admin_brand_show', {'id': model.brand.id}) }}">{{ model.brand.name }}</a></td>
                        <td>
                            <a href="{{ path('admin_model_edit', {'id': model.id}) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('admin_model_delete', {'id': model.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('admin_model_new') }}" class="align-self-center col-2 btn btn-success">Ajouter une marque</a>
    </div>
{% endblock %}