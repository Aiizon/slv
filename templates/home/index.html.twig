{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="d-flex flex-grow-1 flex-column justify-content-center">
        {{ form_start(form, {'attr': {'class': 'd-flex flex-grow-1 flex-row justify-content-evenly m-2'}}) }}
        {{ form_row(form.startDate) }}
        {{ form_row(form.endDate) }}
        {{ form_row(form.type) }}
        {{ form_end(form) }}

        {% if hasUsedFilter %}
            <h2 class="align-self-center">Des véhicules qui vous correspondent</h2>
        {% else %}
            <h2 class="align-self-center">Nos véhicules en vedette</h2>
        {% endif %}

        <div class="d-flex flex-grow-1 flex-column justify-content-evenly m-2">
            {% for i in 0..(vehicles|length / 3|round(0, 'floor') - 1) %}
                <div class="row">
                    {% for j in 0..2 %}
                        {% set vehicle = vehicles[i * 3 + j] %}
                            {% if vehicle is defined %}
                                <div class="col card m-2" style="width: 18rem;">
                                    <img src="{{ vehicle.picture }}" class="card-img-top" alt="{{ vehicle.model.brand.name }} {{ vehicle.model.name }}">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">{{ vehicle.model.brand.name }} {{ vehicle.model.name }}</h5>
                                        <p class="card-text">Prix: {{ vehicle.daily_rent }}€ /jour</p>
                                        <a href="{{ path('home', {'id': vehicle.id}) }}" class="btn btn-primary">Voir</a>
                                    </div>
                                </div>
                            {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}